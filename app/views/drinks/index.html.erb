                  <div class="intro-text">
                        <span class="name">The Drink List</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

 

<% form_tag drinks_path do %>
  <p>
    <%= text_field_tag :search %>
    <%= submit_tag "Search" %>
  </p>

<% end %>

<section class= id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Method</th>
      <th>Glass</th>
      <th>Garnish</th>
      <th>Ice</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drinks.each do |drink| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= drink.name %></td>
        <td><%= drink.method %></td>
        <td><%= drink.glass %></td>
        <td><%= drink.garnish %></td>
        <td><%= drink.ice %></td>
        <td><%= drink.notes %></td>
        <td><%= link_to 'Recipe', drink %></td>
      </tr>
    <% end %>
  </tbody>
</table>
            </div>
        </div>
    </section>

<br>

