<h1>Listing Drinks</h1>

<% form_tag drinks_path do %>
  <p>
    <%= text_field_tag :search %>
    <%= submit_tag "Search" %>
  </p>

<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Method</th>
      <th>Glass</th>
      <th>Garnish</th>
      <th>Ice</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drinks.each do |drink| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= drink.name %></td>
        <td><%= drink.method %></td>
        <td><%= drink.glass %></td>
        <td><%= drink.garnish %></td>
        <td><%= drink.ice %></td>
        <td><%= drink.notes %></td>
        <td><%= link_to 'Show', drink %></td>
        <td><%= link_to 'Edit', edit_drink_path(drink) %></td>
        <td><%= link_to 'Destroy', drink, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Drink', new_drink_path %>
