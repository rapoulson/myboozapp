<h1>Bartender</h1>
<% form_tag drinks_path do %>
  <p>
    <%= text_field_tag :search %>
    <%= submit_tag "Search" %>
  </p>
<% end %>

<ul>
<% for drink in @drinks %>
  <li>
  <%= link_to drink.name, drink_path(drink) %>
    <% link_to "Edit", edit_drink_path(drink) %>
    <% link_to "Destroy", drink_path(drink), :method => :delete %>
  </li>
<% end %>
</ul>